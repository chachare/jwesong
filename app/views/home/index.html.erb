<div class="container" style="margin-top:50px;">
<form action="/home/write" method="post">
  <div class="form-group">
    <label for="exampleInputPassword1">제 목</label>
    <input type="text" name="title" class="form-control" id="exampleInputPassword1" placeholder="ㅎ_ㅎ">
  </div>
  <textarea class="form-control" rows="10" id="content" name="content"></textarea>
  <button type="submit" class="btn btn-default">전 송</button>
</form>

<% @posts.each do |post| %>
    <div class="well" id="word-count-container">
   <span style="font-weight:bold;"><%= post.title %></span></br>
    <%= post.content %><br>
    <p>총 글자 수: <%= post.content.length-%></p>
    <p>공백 뺀 글자수: <%= post.content.length - post.content.count(' ')%></p>
    <p>단어 갯수: <%=post.content.split(' ').length%></p> 
      <% post.replies.each do |r| %>
     <p><%= r.content %></p>
     <% end %>
    <form style="margin-top: 50px;" action="/home/reply_write" method="post">
      <input type="hidden" value="<%= post.id %>" name="id_of_post">
      <textarea class="form-control" rows="5" id="content" name="content"></textarea>
      <button type="submit" class="btn btn-default">전 송</button>
    </form>
    
    </div>
    <% end %>
    
</div>